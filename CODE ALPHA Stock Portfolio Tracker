       print(\"--------------------\")\n","        print(f\"Total Portfolio Value: ${self.calculate_portfolio_value():.2f}\")\n","\n","if __name__ == \"__main__\":\n","    tracker = StockPortfolioTracker()\n","\n","    while True:\n","        print(\"1. Add Stock\")\n","        print(\"2. Remove Stock\")\n","        print(\"3. Update Portfolio\")\n","        print(\"4. Display Portfolio\")\n","        print(\"5. Quit\")\n","        try:\n","            choice = int(input(\"Enter your choice: \"))\n","        except ValueError:\n","            print(\"Invalid input. Please enter a number between 1 and 5.\")\n","            continue\n","        if choice == 1:\n","            ticker = input(\"Enter the stock ticker: \")\n","            shares = int(input(\"Enter the number of shares: \"))\n","            tracker.add_stock(ticker, shares)\n","        elif choice == 2:\n","            ticker = input(\"Enter the stock ticker to remove: \")\n","            tracker.remove_stock(ticker)\n","        elif choice == 3:\n","            tracker.update_portfolio()\n","        elif choice == 4:\n","            tracker.display_portfolio()\n","        elif choice == 5:\n","            break\n","        else:\n","            print(\"Invalid choice. Please try again.\")"]},{"cell_type":"markdown","source":[],"metadata":{"id":"fxpp0zwcVr2Q"}}]}